@import '_vars.styl'

/***********************/
/* Sample stylesheet for defining project specific styles */
/***********************/

*
  box-sizing: border-box;
  font-family: Lato;
  font-size: 14px;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;


/* Override styles from base.css */

/***********************/
/* Btn override */
/***********************/

.Btn
  background-color: #fbfbfb

  &:not(.Btn--link)
    &:not(:disabled)
      &:hover
        background-color: #ececec

      &:active
        background-color: #dcdcdc

  &.Btn--round
    border-radius: 24px

  &.Btn--primary
    background-color: $c-primary
    color: $white

    &:not(:disabled)
      &:hover
        background-color: $c-primary-light

      &:active
        background-color: $c-primary-dark

/***********************/
/* Spinner override */
/***********************/

.Spinner
  border-color: $gray
  border-top-color: transparent

&--primary
  border-color: $c-primary
  border-top-color: transparent

/***********************/
/* Tag override */
/***********************/

.Tag
  background-color: #f3f3f3

  &--round
    border-radius: 24px


/***********************/
/* Card override */
/***********************/

.Card
  &--round
    border-radius: 24px



/***********************/
/* RipplePointer override */
/***********************/

.RipplePointer
  &--primary
    &::after, &::before
      background-color: $c-primary

    .RipplePointer-epicenter::after
      background-color: $c-primary


/***********************/
/* HelpText override */
/***********************/

.HelpText
  color: $gray


/***********************/
/* Tooltip override */
/***********************/

.Tooltip
  .Tooltip-trigger
    &:hover
      & + .SmartTipContent--Tooltip
        transform: translate(-50%, -6px)

.SmartTipContent--Tooltip
  transform: translate(-50%, 0) scale(0.9)


/***********************/
/* Popover override */
/***********************/


.SmartTipContent--Popover
  transform: translate(-50%, 0) scale(.9)
  animation: .12s moveUp cubic-bezier(0.12, 0.95, 1, 1) forwards


@keyframes moveUp
  0%
    opacity: 0
    transform: translate(-50%, 0) scale(.9)

  100%
    opacity: 1
    transform: translate(-50%, -6px)

