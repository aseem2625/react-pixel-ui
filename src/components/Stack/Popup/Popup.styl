@import $vars


.Popup
  position: absolute
  top: 40%
  left: 50%
  transform: translate(-50%, -50%)
  max-width: 98%
  min-width: 360px
  min-height: 200px
  padding: 24px
  background: $white
  transition: 0.15s
  z-index: $highestZIndex

  &-body
    position: relative


  .Popup-cross
    position: absolute
    right: 8px
    top: 10px
    padding: 0 4px
    font-size: 20px
    cursor: pointer

.Popup--Confirm
  &-description
    display: block

  &-actions
    display: block

.BackDrop--Popup
  .BackDrop-content
    > div:not(:last-of-type)
      pointer-events: none
      opacity: 0.02
