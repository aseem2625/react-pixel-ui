@import $vars

.Btn
  position: relative
  padding: 8px 20px
  line-height: 16px
  color: $black
  border-radius: 2px
  font-size: inherit
  border: none
  outline: none
  transition: 0.15s
  transform-origin: center
  cursor: pointer

  &:disabled
    cursor: not-allowed !important
    opacity: 0.5

  &.Btn--link
    padding: 8px 0
    background-color: transparent
    box-shadow: none

    &:not(:disabled)
      &:hover
        background-color: inherit
        text-decoration: underline

      &:active
        background-color: inherit
        text-decoration: underline

.Btn--AsyncBtn
  .Btn-text, .Spinner
    vertical-align: middle

  .Btn-text
    display: inline-block

  .Spinner
    position: absolute
    display: none

  .Btn-text
    transition: 0.2s padding cubic-bezier(0.2, 0.9, 1, 1)

  &.Btn--AsyncBtn--withSpinner
    .Spinner
      left: 16px

    span + .Spinner
      left: unset
      right: 16px

  &.Btn--AsyncBtn--isPending
    height: 34px

    .Spinner
      display: inline-block

    &.Btn--AsyncBtn--withSpinner
      .Btn-text
        padding: 0 28px 0 0

      .Spinner + .Btn-text
        padding: 0 0 0 28px
