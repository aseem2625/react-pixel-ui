@import $vars


.Popover
  position: relative

  .Popover-trigger
    cursor: pointer
    user-select: none
    display: inline-block

  &--show
    .SmartTipContent--Popover
      opacity: 1


.SmartTipContent--Popover
  padding: 12px 16px
  max-width: 280px
  margin-top: -8px
  border-radius: 3px
  line-height: 20px
  font-size: 13px

  bottom: 100%
  left: 50%
  transform: translate(-50%, 0)
  animation: .12s px_moveUp cubic-bezier(0.12, 0.95, 1, 1) forwards

  opacity: 0
  background-color: $white
  border-color: $white
  will-change: transform
  transform-origin: center bottom
  pointer-events: all


// Add px- prefix to avoid name clashing
@keyframes px_moveUp
  0%
    opacity: 0
    transform: translate(-50%, 0)

  100%
    opacity: 1
    transform: translate(-50%, -6px)
