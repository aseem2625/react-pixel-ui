@import $vars

.Dropdown
  position: relative
  font-size: 14px

  height: 32px
  line-height: 30px
  border: 1px solid black

  .Dropdown-trigger
    cursor: pointer
    z-index: 1
    padding: 0 12px

  //.Dropdown-selected

  .Dropdown-options
    min-width: 240px
    position: absolute
    top: 36px
    left: 0
    transform-origin: top center
    opacity: 0
    border: 1px solid black
    z-index: 2
    background-color: $white
    pointer-events: none

    &::before
      content: ''
      position: absolute
      top: -9px
      left: 20px
      z-index: -1
      width: 0
      height: 0
      border-left: 10px solid transparent
      border-right: 10px solid transparent
      border-bottom: 12px solid #ccc

    &::after
      content: ''
      position: absolute
      top: -8px
      left: 22px
      width: 0
      height: 0
      border-left: 8px solid transparent
      border-right: 8px solid transparent
      border-bottom: 10px solid #fff
      z-index: -1

    ul
      li
        padding: 0 12px
        height: 32px
        line-height: 30px
        cursor: pointer
        background-color: $white

        &:not(:last-of-type)
          border-bottom: 1px solid black

        &:hover
          background-color: gray

  &--show
    .Dropdown-options
      opacity: 1
      pointer-events: all


  .Dropdown-option--highlight
    background-color: #fff1b4
