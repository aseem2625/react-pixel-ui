@import $vars


.Tooltip
  position: relative

  .Tooltip-trigger
    cursor: pointer
    user-select: none
    display: inline-block

    &:hover
      & + .SmartTipContent--Tooltip
        opacity: 1


.SmartTipContent--Tooltip
  padding: 12px 16px
  max-width: 200px
  border-radius: 3px
  line-height: 20px
  font-size: 13px

  margin-bottom: 8px
  bottom: 100%
  left: 50%
  transform: translateX(-50%)

  opacity: 0
  background-color: $white
  border-color: $white
  transition: .12s cubic-bezier(0.12, 0.95, 1, 1)
  will-change: transform
  transform-origin: center
  pointer-events: none
