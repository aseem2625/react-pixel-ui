@import $vars


.Tooltip
  position: relative

  .Tooltip-trigger
    cursor: pointer
    user-select: none
    display: inline-block

    &:hover
      & + .Tooltip-content
        opacity: 1


.Tooltip-content
  position: absolute
  padding: 12px 16px
  max-width: 200px
  margin-top: -8px
  border-radius: 3px
  line-height: 20px
  font-size: 13px

  left: 50%
  transform: translateX(-50%)

  opacity: 0
  background-color: $white
  border-color: $white
  transition: .12s cubic-bezier(0.12, 0.95, 1, 1)
  will-change: transform
  transform-origin: center
  pointer-events: none

  &::after
    content: ''
    position: absolute
    bottom: 0
    left: 50%
    transform: translate(-50%)
    width: 30px
    height: 12px
    background-color: inherit

  .arrow
    //content: ''
    position: absolute
    bottom: -4px
    width: 12px
    height: 12px
    left: 50%
    transform: translate(-50%) rotate(48deg) skew(8deg)
    border-radius: 2px
    background-color: inherit
    box-shadow: inherit
    transform-origin: center

