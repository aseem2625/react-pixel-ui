@import $vars

//https://www.chromaticqa.com/
.RipplePointer
  position: relative
  width: 56px
  height: 56px
  &::before, &::after
    content: ''
    display: block
    position: absolute
    width: 100%
    height: 100%
    left: -28px
    top: -28px
    border-radius: 50%
    background: $white
    opacity: 0
    animation: 1.6s cubic-bezier(0, 0, 0.46, 1) 0s infinite
    transform: scale(0)
    pointer-events: none

  &::before
    z-index: 1
    animation-name: ripple-before
  &::after
    animation-name: ripple-after
    animation-delay: 0.6s
    animation-duration: 1.6s
    z-index: 2

  .RipplePointer-epicenter
    position: absolute
    display: block
    height: 16px
    width: 16px
    border-radius: 50%
    left: -8px
    top: -8px
    opacity: 0.9
    background: $white
    z-index: 3
    pointer-events: none

  &.RipplePointer--clickable
    .RipplePointer-epicenter
      cursor: pointer
      pointer-events: all

  &--primary
    &::after, &::before
      background: $c-primary

    .RipplePointer-epicenter
      background-color: $c-primary

@keyframes ripple-before
  0%
    transform: scale(0)
    opacity: 0.4

  100%
    transform: scale(2)
    opacity: 0

@keyframes ripple-after
  0%
    transform: scale(0)
    opacity: 0.4

  80%, 100%
    transform: scale(2)
    opacity: 0
