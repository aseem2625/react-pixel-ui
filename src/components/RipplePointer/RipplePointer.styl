@import $vars

//https://www.chromaticqa.com/
.RipplePointer
  position: absolute
  width: 56px
  height: 56px

  &::before, &::after
    content: ''
    display: block
    position: absolute
    width: 100%
    height: 100%
    left: -28px
    top: -28px
    border-radius: 50%
    background: $white
    opacity: 0
    animation: 1.6s cubic-bezier(0, 0, 0.46, 1) 0s infinite
    transform: scale(0)
    pointer-events: none

  &::before
    z-index: 1
    animation-name: ripple-before
  &::after
    animation-name: ripple-after
    animation-delay: 0.6s
    animation-duration: 1.6s
    z-index: 2

  .RipplePointer-epicenter
    display: block
    height: 24px
    width: 24px
    position: absolute
    pointer-events: none
    left: -12px
    top: -12px
    z-index: 3

    &::after
      content: ''
      display: block
      height: 16px
      position: absolute
      width: 16px
      left: 4px
      top: 4px
      border-radius: 50%
      opacity: 0.9
      background-color: $white

  &.RipplePointer--clickable
    .RipplePointer-epicenter
      cursor: pointer
      pointer-events: all

@keyframes ripple-before
  0%
    transform: scale(0)
    opacity: 0.4

  100%
    transform: scale(2)
    opacity: 0

@keyframes ripple-after
  0%
    transform: scale(0)
    opacity: 0.4

  80%, 100%
    transform: scale(2)
    opacity: 0
