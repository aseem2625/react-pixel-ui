@import $vars

.Card
  background-color: $white
  border-radius: 8px
  box-shadow: 0 0 8px rgba(0, 0, 0, 0.1)
  padding: 20px

  &--animate
    animation: fadeInUpAppear 180ms ease-out 0s 1 normal forwards


@keyframes fadeInUpAppear
  0%
    opacity: 0
    transform: translate(-50%,3px)

  100%
    opacity: 1
    transform: translate(-50%,0)
