@import $vars

.FieldWrapper
  position: relative

  .Field-label
    font-size: inherit

    .Field-label-star
      color: $red
      margin-left: 2px

  .Field-content
    width: 200px
    font-size: inherit

  .Field-description
    margin-top: 4px
    display: block

  .Field-error
    margin-top: 4px
    display: none

  &.FieldWrapper--disabled
    display: block

    .Field-label, .Field-el
      cursor: not-allowed
      opacity: 0.4

  &.FieldWrapper--focused
    .Field-el
      border-color: $blue


  &.FieldWrapper--invalid
    display: block
    .Field-el
      border-color: $red

    .Field-error
      display: block

.Field
  position: relative
  display: block

  .Field-el
    width: 100%
    height: 34px
    border: 1px solid $gray
    padding: 0 8px
    line-height: 34px
    border-radius: 2px
    outline: none
