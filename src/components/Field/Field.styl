@import $vars

.FieldWrapper
  position: relative

  .Field-label
    font-size: 14px
    font-weight: bold
    display: block

    .Field-label-star
      color: $red

  .Field-content
    width: 200px
    display: block
    font-size: 14px

  .Field-description
    display: block

  .Field-error
    display: none

  &.FieldWrapper--disabled
    display: block

    .Field-label, .Field-el
      cursor: not-allowed
      opacity: 0.4

  &.FieldWrapper--focused
    .Field-el
      border-color: #528ff0


  &.FieldWrapper--invalid
    display: block
    .Field-el
      border-color: $red

    .Field-error
      display: block

.Field
  position: relative
  display: block

  .Field-el
    width: 100%
    height: 34px
    border: 1px solid black
    padding: 0 8px
    line-height: 34px
    border-radius: 2px
    outline: none




